<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval" >
            <solid android:color="#000000" />

            <size
                android:height="15dp"
                android:width="15dp" />

            <padding
                android:bottom="5dp"
                android:left="20dp"
                android:right="20dp"
                android:top="40dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval" >


            <stroke
                android:width="5dp"
                android:color="@android:color/transparent" />

            <solid android:color="#f00" />

            <size
                android:height="10dp"
                android:width="10dp" />
        </shape>
    </item>

</selector>