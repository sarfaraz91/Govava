<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:layout_margin="10dp"
        android:background="#FFFFFF">




        <RelativeLayout
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:paddingBottom="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            >
            <ToggleButton
                android:id="@+id/toggle_fav"
                android:layout_width="12dp"
                android:layout_height="10dp"
                android:background="@drawable/ictoggle"
                android:textOn=""
                android:textOff=""
                android:text=""
                android:focusable="false"
                android:padding="10dp"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRICE"
            android:textSize="10dp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textAllCaps="true"/>




        <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$120:00"
        android:textSize="12dp"
            android:layout_below="@+id/from"
        android:layout_marginLeft="5dp"
        />

    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/img_men"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_below="@+id/price"/>


        <LinearLayout
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/img_men"
            >

    <TextView
        android:layout_weight="1"
        android:id="@+id/tv_serviceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AT WALMART"
        android:textSize="8dp"
        android:textAllCaps="true"/>


    <TextView
        android:layout_weight="1"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WATCHES"
        android:textSize="12dp"
        android:maxLines="2"
        />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>