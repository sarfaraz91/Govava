<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    tools:context="com.example.daniyal.govava.activity.EditProfile"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <ImageView
                android:background="@drawable/registration_cover"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:id="@+id/imgcover"
                 />



            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/img"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_profile"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:src="@drawable/registration_profile_image"
                            />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/upload_image"
                        android:layout_centerHorizontal="true"
                        android:background="@mipmap/upload_img"
                        android:layout_width="96dp"
                        android:layout_height="104dp" />

                    <LinearLayout
                        android:layout_below="@+id/img"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/UpdName"
                        android:textColor="@color/colorWhite"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_gravity="center"
                        android:id="@+id/UpdEmail"
                        android:textSize="12dp"
                        android:fontFamily="bolt"
                        />
                    </LinearLayout>
                </RelativeLayout>


            </RelativeLayout>
            <ScrollView
                android:id="@+id/scroll"
                android:layout_marginTop="280dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:id="@+id/RelativeLayout1"

                >



                <EditText
                    android:layout_centerHorizontal="true"

                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:hint="Full Name"
                    android:paddingLeft="30dp"
                    android:drawableLeft="@mipmap/username_icon"
                    android:paddingRight="30dp"
                    android:id="@+id/FullName"
                    android:background="@color/colorWhite"
                    android:textColor="@color/colorBlack"
                    android:drawablePadding="10dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:maxLines="1"
                    />
                <EditText
                    android:layout_centerHorizontal="true"

                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:drawableLeft="@mipmap/envelope_icon"
                    android:layout_below="@id/FullName"
                    android:id="@+id/EmailAddress"
                    android:hint="Email Address"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorWhite"
                    android:textColor="@color/colorBlack"
                    android:drawablePadding="10dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:maxLines="1"

                    />
                <EditText
                    android:layout_centerHorizontal="true"

                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:hint="Password"
                    android:drawableLeft="@mipmap/password_icon"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:layout_below="@id/EmailAddress"
                    android:id="@+id/Password"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorWhite"
                    android:textColor="@color/colorBlack"
                    android:drawablePadding="10dp"
                    android:inputType="textPassword"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:maxLines="1"

                    />
                <EditText
                    android:layout_centerHorizontal="true"

                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:hint="Confirm Password"
                    android:paddingLeft="30dp"
                    android:drawableLeft="@mipmap/password_icon"
                    android:paddingRight="30dp"
                    android:layout_below="@id/Password"
                    android:id="@+id/ConfirmPassword"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorWhite"
                    android:textColor="@color/colorBlack"
                    android:drawablePadding="10dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    />

                <EditText
                    android:layout_centerHorizontal="true"

                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:hint="Address"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:drawableLeft="@mipmap/location_icon"
                    android:layout_below="@id/ConfirmPassword"
                    android:background="@color/colorWhite"
                    android:layout_marginTop="10dp"
                    android:id="@+id/Adress"
                    android:textColor="@color/colorBlack"
                    android:drawablePadding="10dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:maxLines="1"

                    />

                <EditText
                    android:layout_centerHorizontal="true"

                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:hint="Phone Number"
                    android:paddingLeft="30dp"
                    android:drawableLeft="@mipmap/phone_icon"
                    android:paddingRight="30dp"
                    android:layout_below="@id/Adress"
                    android:background="@color/colorWhite"
                    android:id="@+id/PhoneNumber"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorBlack"
                    android:drawablePadding="10dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:inputType="number"
                    />




                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="350dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:src="@drawable/registration_attached"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/FullName"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="350dp"
                        android:layout_gravity="right"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:src="@drawable/registration_attached"
                        />
                </LinearLayout>

                <Button
                    android:id="@+id/UpdImgSign"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_below="@+id/PhoneNumber"
                    android:text="Update profile"
                    android:background="@mipmap/signup_btn"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

            </ScrollView>
