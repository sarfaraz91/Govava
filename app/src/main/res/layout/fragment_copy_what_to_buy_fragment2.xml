<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg"
    tools:context="com.example.daniyal.govava.activity.Question_2">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/Relative1"
        >



        <de.hdodenhof.circleimageview.CircleImageView

            android:layout_width="150dp"
            android:layout_height="110dp"
            android:id="@+id/CoverImage"
            android:src="@drawable/profile_pic"

            android:layout_centerInParent="true"/>


        <!--<RelativeLayout
            android:id="@+id/rl_QuestionCross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/QuestionCross"
                android:src="@mipmap/question_cross_icon"

                />

        </RelativeLayout>-->

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Relative1"
        android:layout_marginTop="20dp"
        android:id="@+id/Relative2"

        >

        <TextView
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="#202020"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please select the person's gender\n\t for whom are you gifting for"

            />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/Relative2"
        android:id="@+id/Relative3"
        android:layout_centerHorizontal="true">



        <EditText
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:textSize="12dp"
            android:focusableInTouchMode="false"
            android:hint="   Whom do you want to buy for?"
            android:id="@+id/FullName"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:fontFamily="sans-serif"
            android:background="@drawable/item"
            />

        <RelativeLayout
            android:id="@+id/rl_openContactList"
            android:layout_marginTop="60dp"
            android:background="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!--<Spinner
                android:id="@+id/Question2Edit"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/bg_spinner"
                android:entries="@array/gender"
                android:visibility="gone">
            </Spinner>-->
            <EditText
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:textSize="12dp"
                android:focusableInTouchMode="false"
                android:hint="   Whom do you want to buy for?"
                android:id="@+id/ed_contact_name"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:fontFamily="sans-serif"
                android:background="@drawable/item"
                />
<!--
            <TextView
                android:id="@+id/tv_contact_name"
                android:layout_width="320dp"
                android:layout_height="40dp" />-->

        </RelativeLayout>





        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:src="@drawable/login_attached" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/FullName">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:src="@drawable/login_attached"
                />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Relative3"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="3dp"
            android:paddingBottom="10dp"
            android:gravity="center|bottom"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/continuenext"
                android:paddingBottom="10dp"
                android:id="@+id/continueNext"

                />

<!--
            android:onClick="jumpToPage1"
-->
<!--
            android:onClick="jumpToPage1"
-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="10dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/question_selected_ecllipse" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:src="@mipmap/question_unselected_ecllipse" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:src="@mipmap/question_unselected_ecllipse" android:contentDescription="TODO"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:src="@mipmap/question_unselected_ecllipse" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:src="@mipmap/question_unselected_ecllipse" />


            </LinearLayout>








        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>
