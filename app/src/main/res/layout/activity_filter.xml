<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/filter_bg"
    tools:context="com.example.daniyal.govava.activity.FilterActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FILTER"
                android:id="@+id/FILTER"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp">

                <RelativeLayout
                    android:id="@+id/close_filter"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/question_cross_icon"
                />


                </RelativeLayout>



            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/FilterHint"

                android:layout_below="@id/FILTER"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:text="Filter the item which you are looking for!"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/FilterHint"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:text="Our system will find "
                />

            <View
                android:id="@+id/Vview1"
                android:layout_width="200dp"
                android:layout_height="2dp"
                android:layout_below="@id/FilterHint"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@color/colorGry"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Vview1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="SIZE"
                android:id="@+id/SizeText"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/SizeText"
                android:layout_marginTop="20dp"
                android:id="@+id/Linear1"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:layout_marginRight="0dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:text="XS"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="25dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:text="S"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="30dp"

                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:text="M"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="30dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:text="L"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="30dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:text="XL"
                    />




            </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Linear1"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:text="COLOR"
                    android:id="@+id/ColorText"
                    android:textColor="@color/colorBlack"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_centerHorizontal="true"
                    />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ColorText"
                android:layout_marginTop="20dp"
                android:id="@+id/Linear2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/filter_orange_ecllipse"
                    />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/filter_green_ecllipse"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/filter_lightblue_ecllipse"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/filter_blue_ecllipse"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/filter_yellow_ecllipse"
                    />



            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Linear2"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:text="PRICE"
                android:id="@+id/PriceText"
                android:textColor="@color/colorBlack"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_centerHorizontal="true"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/PriceText"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp">


                <com.yahoo.mobile.client.android.util.rangeseekbar.RangeSeekBar
                    android:id="@+id/rangeSeekbar"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="-10dp"
                    android:layout_height="wrap_content" />


                <RelativeLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="70dp"
                    android:paddingBottom="30dp"
                    android:layout_below="@id/rangeSeekbar"



                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <RelativeLayout
                        android:paddingLeft="35dp"
                        android:paddingRight="35dp"
                        android:background="#fff"
                        android:layout_width="320dp"
                        android:layout_height="40dp">
                        <Spinner
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/bg_spinner"
                            android:entries="@array/old"
                            android:layout_width="320dp"
                            android:layout_height="40dp"
                            >


                        </Spinner>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="25dp"
                        android:paddingLeft="35dp"
                        android:paddingRight="35dp"
                        android:background="#fff"
                        android:layout_width="320dp"
                        android:layout_height="40dp">
                        <Spinner
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/bg_spinner"
                            android:entries="@array/old"
                            android:layout_width="320dp"
                            android:layout_height="40dp"
                            >


                        </Spinner>

                    </RelativeLayout>


                    </LinearLayout>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:src="@drawable/login_attached"

                        />

                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@id/FullName"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="120dp"
                            android:layout_gravity="right"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:src="@drawable/login_attached"
                            />
                    </LinearLayout>




                </RelativeLayout>






            </RelativeLayout>






        </RelativeLayout>


    </ScrollView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/tick_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />




</RelativeLayout>
